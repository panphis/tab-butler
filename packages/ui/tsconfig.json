{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "noEmitOnError": false
  },
  "include": [
    "src",
    "tailwind.config.js",
    "postcss.config.mjs"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}